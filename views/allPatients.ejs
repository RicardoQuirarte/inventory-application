<!doctype html>
<html lang="en">
  <head>
    <meta name="viewport">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title><%= title %></title>
  </head>
  <body>
    <div class="container text-center" style="margin-top: 100px;">
      <h1><%= title %></h1>
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Peso</th>
            <th>Estatura</th>
            <th>Age</th>
            <th>Price</th>
            <th>Category</th>
          </tr>
        </thead>
        <% if (patients) {%> <% patients.forEach(patient => { %>
          <tbody>
            <tr>
            <td><%= patient.id %></td>
            <td><a href="/search?id=<%= patient.id %>"><%= patient.name %></a></td>
            <td><%= patient.peso %></td>
            <td><%= patient.estatura %></td>
            <td><%= patient.age %></td>
            <td>$<%= patient.price %></td>
            <td><%= patient.category %></td>
          </tr>
          </tbody>
        <% }); %> <% } %>
      <table>
          <div class="btn-group">
            <a href="/" class="btn btn-outline-primary">Back to main page</a>
            <a href="/create" class="btn btn-outline-primary">Create new patient</a>
          </div>
    </div>
  </body>
</html>
